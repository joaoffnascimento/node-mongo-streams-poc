{
    "name": "mongodb-streams-poc",
    "version": "1.0.0",
    "description": "POC demonstrando processamento eficiente com Streams",
    "main": "src/presentation/cli/index.js",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "start": "node dist/presentation/cli/index.js",
        "start:ts": "ts-node -r tsconfig-paths/register src/presentation/cli/index.ts",
        "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/presentation/cli/index.ts",
        "seed": "ts-node -r tsconfig-paths/register scripts/seed.ts",
        "benchmark": "ts-node -r tsconfig-paths/register scripts/benchmark.ts",
        "test:no-stream": "ts-node -r tsconfig-paths/register src/presentation/cli/index.ts process:no-stream",
        "test:stream": "ts-node -r tsconfig-paths/register src/presentation/cli/index.ts process:stream",
        "compare": "ts-node -r tsconfig-paths/register src/presentation/cli/index.ts compare",
        "status": "ts-node -r tsconfig-paths/register src/presentation/cli/index.ts status",
        "docker:up": "docker compose -f docker/docker-compose.yml up -d",
        "docker:down": "docker compose -f docker/docker-compose.yml down",
        "docker:reset": "npm run docker:down && docker volume rm docker_mongo-data 2>/dev/null || true && npm run docker:up && echo '‚è≥ Waiting for MongoDB to be ready...' && sleep 5",
        "docker:logs": "docker compose -f docker/docker-compose.yml logs -f mongodb",
        "seed:1m": "TOTAL_DOCUMENTS=1000000 npm run seed",
        "seed:100k": "TOTAL_DOCUMENTS=100000 npm run seed",
        "seed:10k": "TOTAL_DOCUMENTS=10000 npm run seed"
    },
    "keywords": [
        "mongodb",
        "streams",
        "clean-architecture",
        "performance"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "chalk": "^4.1.2",
        "cli-table3": "^0.6.3",
        "commander": "^11.1.0",
        "dotenv": "^16.3.1",
        "mongodb": "^6.3.0",
        "ora": "^5.4.1",
        "pino": "^8.16.2",
        "pino-pretty": "^10.2.3",
        "stream-chain": "^2.2.5",
        "stream-json": "^1.8.0",
        "through2": "^4.0.2"
    },
    "devDependencies": {
        "@types/chalk": "^0.4.31",
        "@types/commander": "^2.12.0",
        "@types/mongodb": "^4.0.6",
        "@types/node": "^20.19.11",
        "@types/pino": "^7.0.4",
        "jest": "^29.7.0",
        "nodemon": "^3.1.10",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.2"
    }
}