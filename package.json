{
    "name": "mongodb-streams-poc",
    "version": "1.0.0",
    "description": "POC demonstrating MongoDB streaming vs traditional processing with REST API",
    "main": "src/presentation/app.server.ts",
    "scripts": {
        "// === BUILD COMMANDS ===": "",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "clean": "rm -rf dist node_modules/.cache",
        "// === DEVELOPMENT COMMANDS ===": "",
        "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/presentation/app.server.ts",
        "start": "ts-node -r tsconfig-paths/register src/presentation/app.server.ts",
        "// === ENVIRONMENT MANAGEMENT ===": "",
        "env:start": "docker compose -f docker/docker-compose.yml up -d --build && echo 'ðŸš€ Environment started! API: http://localhost:3000'",
        "env:stop": "docker compose -f docker/docker-compose.yml down",
        "env:restart": "npm run env:stop && npm run env:start",
        "env:destroy": "docker compose -f docker/docker-compose.yml down -v --remove-orphans && docker system prune -f",
        "env:status": "docker compose -f docker/docker-compose.yml ps",
        "// === MONITORING & LOGS ===": "",
        "logs:all": "docker compose -f docker/docker-compose.yml logs -f",
        "logs:api": "docker compose -f docker/docker-compose.yml logs -f api",
        "logs:db": "docker compose -f docker/docker-compose.yml logs -f mongodb",
        "// === CSV STREAMING DEMO ===": "",
        "demo:csv": "./demo-csv-streaming.sh",
        "demo:csv-quick": "curl -X POST http://localhost:3000/api/process/csv-download -H 'Content-Type: application/json' -d '{\"limit\": 10000}' --output quick-demo.csv",
        "demo:csv-large": "curl -X POST http://localhost:3000/api/process/csv-download -H 'Content-Type: application/json' -d '{\"limit\": 1000000}' --output large-demo.csv",
        "// === CODE QUALITY ===": "",
        "lint": "eslint . --ext .ts,.js",
        "lint:fix": "eslint . --ext .ts,.js --fix",
        "format": "prettier --write \"**/*.{ts,js,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,js,json,md}\""
    },
    "keywords": [
        "mongodb",
        "streams",
        "clean-architecture",
        "performance"
    ],
    "author": "joaoffnascimento",
    "license": "MIT",
    "dependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "cors": "^2.8.5",
        "csv-stringify": "^6.6.0",
        "dotenv": "^16.3.1",
        "express": "^5.1.0",
        "helmet": "^8.1.0",
        "mongodb": "^6.3.0",
        "pino": "^8.16.2",
        "pino-pretty": "^10.2.3",
        "prom-client": "^15.1.3"
    },
    "devDependencies": {
        "@types/csv-stringify": "^1.4.3",
        "@types/mongodb": "^4.0.6",
        "@types/node": "^20.19.11",
        "@types/pino": "^7.0.4",
        "@typescript-eslint/eslint-plugin": "^8.40.0",
        "@typescript-eslint/parser": "^8.40.0",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "jest": "^29.7.0",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.2"
    }
}